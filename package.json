{
  "name": "loogie",
  "description": "A simple logger for your typescript project built with Bun!",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Pandu Yudhistira",
  "module": "src/index.ts",
  "keywords": [
    "elysia",
    "logger",
    "bun",
    "bun logger",
    "elysia logger"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.ts",
  "types": "src/loogie.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.js",
    "node": "./dist/index.js",
    "default": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theyudhiztira/loogie.git"
  },
  "scripts": {
    "dev": "bun run --watch example/example.ts",
    "build":  "rm -rf dist && bun build src/index.ts --outdir ./dist --target bun --minify && tsc"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@google-cloud/logging": "^11.2.0"
  }
}